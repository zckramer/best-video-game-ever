# EditorConfig for fps_survival project
# Enforces consistent code style across the project
# https://editorconfig.org

root = true

# ===== All Text Files =====
[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# ===== C++ Headers & Source =====
[*.{h,cpp,c,hpp}]
indent_style = tab
indent_size = 4

# ===== C# Build Scripts =====
[*.cs]
indent_style = space
indent_size = 4

# ===== JSON =====
[*.json]
indent_style = space
indent_size = 2

# ===== YAML =====
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# ===== Markdown =====
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# ===== INI Configuration =====
[*.ini]
indent_style = space
indent_size = 4

# ===== .uplugin and .uproject =====
[*.{uplugin,uproject}]
indent_style = space
indent_size = 2
